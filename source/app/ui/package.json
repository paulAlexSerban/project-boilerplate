{
  "name": "project-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "npm run scssProd && npm run autoprefixer && npm run lint && npm run babel",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "onchange -v 'src/components/*/*/*/*.scss' -- npm run build:css",
    "watch:js": "onchange -v 'src/components/*/*/*/*.js' -- npm run build:js",
    "build": "npm-run-all --parallel build:*",
    "build:css": "npm run scss:dev && npm run autoprefixer",
    "build:js": "npm run lint && npm run babel",
    "scss:dev": "node-sass --output-style expanded -o dist/css src/components/controllers",
    "scssProd": "node-sass --output-style compressed -o dist/css src/components/controllers",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r dist/css/pages/*",
    "lint": "eslint src/components/controllers",
    "babel": "babel --config-file ./babel.config.json src/components/controllers/*/*/*.js -d dist/js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "autoprefixer": "^10.4.2",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "uglify-js": "^3.14.5"
  }
}
