{
  "name": "project-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "echo 'run development dedicated builds - TO BE DEVELOPED'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "onchange -v --await-write-finish 1500 'src/components/*/*/*/*.scss' -- npm run build:css",
    "watch:js": "onchange -v --await-write-finish 1500 'src/components/*/*/*/*.js' -- npm run build:js",
    "build": "npm-run-all --parallel build:*",
    "build:css": "npm run scss:dev && npm run autoprefixer",
    "build:js": "npm run webpack:dev",
    "scss:dev": "node-sass --output-style expanded -o dist/css src/components/controllers",
    "scss:prod": "node-sass --output-style compressed -o dist/css src/components/controllers",
    "autoprefixer": "postcss --no-map -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r dist/css/pages/*",
    "lint": "eslint src/components/controllers",
    "babel": "babel --config-file ./babel.config.json src/components/controllers/*/*/*.js -d dist/js",
    "webpack:dev": "webpack --config build/tasks/javascript/webpack.dev.js --progress",
    "webpack:prod": "webpack --config build/tasks/javascript/webpack.prod.js --progress",
    "gulp-js:dev": "gulp --gulpfile build/tasks/javascript/gulpfile.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "autoprefixer": "^10.4.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-webpack-plugin": "^3.1.1",
    "glob": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-eslint": "^6.0.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "terser-webpack-plugin": "^5.3.0",
    "vinyl-named": "^1.1.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-manifest-plugin": "^4.0.2",
    "webpack-merge": "^5.8.0",
    "webpack-stream": "^7.0.0"
  }
}
